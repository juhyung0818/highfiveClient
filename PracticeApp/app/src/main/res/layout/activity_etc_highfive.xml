<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_etc_highfive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.practice.practiceapp.etc_highfive">


    <android.support.v7.widget.Toolbar
        android:id="@+id/hf_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="#1E88E5"
        android:elevation="6dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="받은"
                android:id="@+id/hf_toolbar_title"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/hf_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        app:tabIndicatorColor="#FFFFFF"
        android:layout_below="@+id/hf_toolbar"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        style="@style/CustomTab" />

    <android.support.v4.view.ViewPager
        android:id="@+id/hf_pager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/hf_tab_layout"/>
</RelativeLayout>
