<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#FFFFFF</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#000000</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#2196F3</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#90CAF9</item>
    </style>

    <style name="CustomTab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabText</item>
        <item name="tabSelectedTextColor">#FFFFFF</item>
    </style>



</resources>
